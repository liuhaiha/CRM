function aggsign(eid,eno)
{
	$("#uname").val(eno);
	
	$("input[name='role']:checked").each(function(idx,elemt){
		$(this).attr("checked",false);
	});
	
	layer.open({
		  title: '分配帐号'
		  ,type: 1
		  ,content: $('#userDiv')
		  ,shade:false
		  ,shadeClose:false
		  ,btn: ['确认', '取消']
		  ,yes: function(index, layero){
			 if ($.trim($("#upass").val()) == '')
			 {
				 alert("初始密码不能为空");
			 }
			 else
			 {
				 aggsignSubmit(eid,eno);
				 layer.close(index); 
			 }
		  }
		  ,cancel: function(index, layero){ 
			layer.close(index); 
		  }});
}

function aggsignSubmit(eid,eno)
{
	var uname = $("#uname").val();
	var upass = $("#upass").val();
	var roleids = "";
	$("input[name='role']:checked").each(function(idx,elemt){
		roleids+=$(this).val()+",";
	});
	upass=pidCrypt.SHA256(upass);
	$.ajax({
	      async: true,
		  type: 'POST',
		  url: '../user/aggsign?t=' + Math.random(),
		  dataType: 'json',
		  data:{"eid":eid,"uname":uname,"upass":upass,"roleids":roleids},
		  timeout: 60000,
		  success:function(result){
			  if (result.code && result.code=="1")
			  {
				 var roleList = result.data;
				 if (roleList&& roleList.length>0)
				 {
					  var len = roleList.length;
					  var checkHtml = '';
					  for (var i = 0; i < len; i++)
					  {
						  var role = roleList[i];
						  checkHtml += '<input type="checkbox" name="role" value="'+role.rid+'">' + role.rname;
						  if (i != 0 && (i+1) % 2 == 0)
						  {
							  checkHtml+="<br><br>";
						  }
					  }
					  $("#roleTd").html(checkHtml);
				 }
				 $("#btnSearch").trigger("click");
			  }
			  else
			  {
				  alert('分配帐号失败,请联系系统管理员');
			  }
		  },error:function(XMLHttpRequest, textStatus, errorThrown) {
		   	  alert('系统错误,请联系系统管理员');
		   	  return false;
		  }
	    }); 
}

