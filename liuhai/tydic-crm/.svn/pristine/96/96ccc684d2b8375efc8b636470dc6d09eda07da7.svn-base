					queryEmp();
				}
			)
			
			$("#last_page").click(function(){
					pageNumber=totalPage;
					queryEmp();
				}
			)
			
			$("#btnSearch").click(function(){
				queryEmp();
			})
			
			var delEmp = this.delEmp;
			$("#btnDel").click(function(){
