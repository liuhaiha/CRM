	<script type="text/javascript">
	
	// 加载分页信息
	function loadpageList(totalitem) {
		var pageSize = $("#pageSizePro").val(); // 每页显示多少条
		var totalPage = totalitem % pageSize == 0 ? totalitem / pageSize : (Math.ceil(totalitem / pageSize)); // 总共多少页
		$("#totalPagePro").text(totalPage);
		$("#totalSizePro").text(totalitem);
		$("#jpageNumberPro").html("");
		var ht = "";
		for ( var k = 1; k <= totalPage; k++) {
			ht += "<option value='" + k + "'>" + k + "</option>";
		}
		$("#jpageNumberPro").html(ht);
		$("#jpageNumberPro").val($("#pageNumberPro").text());
	}
	</script>
	
